{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    /* Bundler mode */
//    "moduleResolution": "bundler",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@": [
        "./src/"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/assets": [
        "./assets"
      ],
      "public": [
        "./public"
      ],
      "public/*": [
        "./public/*"
      ],
      "#components": [
        "./components"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
